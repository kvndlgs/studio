rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload audio files to a specific folder
    match /battles/{fileName} {
      allow write: if request.auth != null && request.resource.contentType.matches('battles/.*');
    }

    // Allow anyone to read audio files in the 'audio' folder
    match /battles/{fileName} {
      allow read;
    }

    // Prevent writes to any other location
    match /{allPaths=**} {
      allow write: if false;
    }
  }
}